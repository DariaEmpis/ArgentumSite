@using ArgentumSite.Models
@model List<GoodCard>

@{
    Layout = "_Layout";
    ViewData["Title"] = Model[0].Category.Name;
}

<div class="text-center">
    <h1 style="margin-bottom: 50px">@Model[0].Category.Name</h1>
    <div class="row row-cols-2 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 row-cols-md-4 row-cols-xl-4 row-cols-xxl-4">
        @foreach (var item in Model)
        {
            <div class="col mb-3">
                <div class="card h-100" style="border-radius: 15px; background-color:#272727; color:#fff">
                    <img src="../../@item.ImageUrl" class="card-img-top" alt="..." style="height: auto; aspect-ratio: 1">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description.Substring(0,30)...</p>
                    </div>
                    <div class="card-footer">
                        <button onclick="location.href='@Url.Action("GoodCard","Home", new {id=item.Id })'" class="btn btn-secondary">@item.Price</button>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row row-cols-2 mb-3" style="background-color:#272727; color: #fff; margin-top: 50px; width:100%; padding: 50px; margin-left: 0">
        <div class="col">
            <h2>Контакты</h2>
            <p class="text-break">Телефон : +8(999)-999-99-99</p>
            <p class="text-break">Адрес : Здесь</p>
            <p class="text-break">e-mail: info@ArgentumSite.com</p>
        </div>
        <div class="col">
            <h2>Социальные сети</h2>
            <p class="text-break">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ullamcorper ...</p>
            <div class="row row-cols-3">
                <div class="col"> <a href="#"><img src="/img/Social/tg.png" alt="..."></a></div>
                <div class="col"> <a href="#"><img src="/img/Social/vk.png" alt="..."></a></div>
                <div class="col"> <a href="#"><img src="/img/Social/yt.png" alt="..."></a></div>
            </div>
        </div>
    </div>
</div>
