<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Argentum</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArgentumSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom navbar-color box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family:ImprintMTShadow; color:#fff">Argentum</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon menu-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-sm-center">
                    <button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Каталог
                    </button>
                    <div class="dropdown-menu">
                        <div class="position-relative"><button class="btn dropdown-item" onclick="location.href='@Url.Action("Category","Home", new {id=1})'">Кольца</button></div>
                        <div class="position-relative"><button class="btn dropdown-item" onclick="location.href='@Url.Action("Category","Home", new {id=2})'">Браслеты</button></div>
                        <div class="position-relative"><button class="btn dropdown-item" onclick="location.href='@Url.Action("Category","Home", new {id=3})'">Цепи</button></div>
                        <div class="position-relative"><button class="btn dropdown-item" onclick="location.href='@Url.Action("Category","Home", new {id=4})'">Кулоны</button></div>
                    </div>
                    <form class="form-class nav-item d-sm-inline-flex" method="post" action="~/Home/Search">
                        <input name="searchString" type="text" class="input input-btn d-inline" placeholder="Искать здесь...">
                        <button type="submit" class="btn-search input-btn d-inline"></button>
                    </form>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ArgentumSite
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
